<% content_for :title do %>
  <title>Poor People Bank - Admin Sign-in</title>
<% end %>
<div class="row">
    <div class="span5"><h2><span>Admins' Portal Login<img src="/images/logo.png" style="margin-bottom:13px;height:300px;"></span></h2></div>
    <div class="span5" style="padding-top:30px;">
        <h4>Login:</h4>
        <br>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

  <div><%= f.label :email %>
  <%= f.email_field :email, :autofocus => true, :class => "input-xlarge" %></div>
  <br />
  <div><%= f.label :password %>
  <%= f.password_field :password, :class => "input-xlarge" %></div>
  <br />

  <% if devise_mapping.rememberable? -%>
    <div class="form-inline"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <br />

  <div><%= f.submit "Sign in", :class => "btn"  %></div>
<% end %>


  <%= render "devise/shared/links" %>

    </div><!--/span5-->
</div><!--/row-->
