<% content_for :title do %>
  <title>Poor People Bank - Suspended Admins</title>
<% end %>
<div class="row">
  <div class="span12">

  <h3 align="center">Admins</h3>
  <ul class="nav nav-tabs">
    <li><%= link_to 'All Admins', admin_admins_path%></li>
    <li class="active"><a>Suspended Admins</a></li>
  </ul>

<% if @admin_admins.size > 0 %>
    <table class="table table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Organization</th>
            <th># Created Cases</th>
            <th># Created Borrowers</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @admin_admins.each do |admin| %>
            <tr>
              <td><%=admin.name%></td>
              <td><%=admin.email%></td>
              <% if admin.phone %>
                <td><%=admin.phone%></td>
              <% else %>
                <td>No Phone</td>
              <% end %>
              <% if admin.organization %>
                <td><%=admin.organization.title%></td>
              <% else %>
                <td>MasterAdmin</td>
              <% end %>
              <td><%=admin.created_cases.count%></td>
              <td><%=admin.created_borrowers.count%></td>
              <td>
                <%= link_to 'Unsuspend', desuspend_admin_admin_path(admin),:class=>"btn", method: :post, data: { confirm: 'Are you sure?' } %>
             </td>
            </tr>

          <% end %>
        </tbody>
    </table>
  </div>
  <% else %>
    <div class="well">
      <h3>There are no Suspended Admins..</h3>
    </div>
  <% end %>
</div>
